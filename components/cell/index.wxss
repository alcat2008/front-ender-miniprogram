.dx_cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  background-color: #fff;
  font-size: 14px
}

.dx_cell::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  -webkit-transform: scale(.5);
  transform: scale(.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-bottom-width: 1px;
  left: 15px;
  right: 0
}

.dx_cell .dx_cell__icon {
  margin-right: 5px
}

.dx_cell .dx_cell__icon:empty {
  display: none
}

.dx_cell__bd {
  flex: 1
}

.dx_cell__text {
  line-height: 24px;
  font-size: 14px
}

.dx_cell__desc {
  line-height: 1.2;
  font-size: 12px;
  color: #666
}

.dx_cell__ft {
  position: relative;
  text-align: right;
  color: #666
}

.dx_cell__no-pading {
  padding: 0
}

.dx_cell__no-pading .dx_cell__bd_padding {
  padding: 12px 0 12px 15px
}

.dx_cell__no-pading .dx_cell__bd_padding .dx_form__input {
  height: 26px
}

.dx_cell__no-pading .dx_cell__ft_padding {
  padding: 12px 15px 12px 0
}

.dx_cell.last-cell::after {
  display: none
}

.dx_cell--access .dx_cell__ft {
  padding-right: 13px
}

.dx_cell--access .dx_cell__ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(.71, .71, -.71, .71, 0, 0)
}

.dx_cell--switch {
  padding-top: 6px;
  padding-bottom: 6px
}
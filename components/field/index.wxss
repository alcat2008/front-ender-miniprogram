.dx_field {
  display: block;
  position: relative;
  color: #333
}

.dx_field::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  -webkit-transform: scale(.5);
  transform: scale(.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-bottom-width: 1px;
  left: 15px;
  right: 0
}

.dx_field--no-border::after {
  border-bottom-width: 0
}

.dx_cell--field {
  padding: 7px 15px
}

.dx_field--wrapped {
  margin: 10px 15px;
  background-color: #fff
}

.dx_field--wrapped::after {
  left: 0;
  border-width: 1px;
  border-radius: 4px
}

.dx_field--wrapped::after {
  display: block
}

.dx_field--error {
  color: #f40
}

.dx_field--wrapped.dx_field--error::after {
  border-color: #f40
}

.dx_field__title {
  color: #333;
  min-width: 65px;
  padding-right: 10px
}

.dx_field__input {
  flex: 1;
  line-height: 1.6;
  padding: 4px 0;
  min-height: 22px;
  height: auto;
  font-size: 14px
}

.dx_field__placeholder {
  font-size: 14px
}

.dx_field__input--right {
  text-align: right
}